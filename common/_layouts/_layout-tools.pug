extends ./_layout.pug

block styles
  if page.styles
    each style in page.styles
      link(href=style, rel='stylesheet')

block title
  h1.h4.hidden-mobile
    span.hidden-mobile!= page.title

block header-right
  .header-right
    a.button.button-primary.header-right-elem(href="/") &larr; All Tools

block footer
  if !page.hideFooter
    footer.footer
      .container-readable.section.text-center
        +horizontal-menu(data.menu.footer)
        p.text-small Copyright Â© <a href="http://kunruchcreations.com/">KunRuch Creations</a>, All rights reserved.
